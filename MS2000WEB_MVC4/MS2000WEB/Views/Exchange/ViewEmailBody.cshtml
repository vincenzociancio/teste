@model MS2000WEB.ViewModels.ExchangeViewModel
@{    
    <fieldset>
        <legend>@Model.Assunto</legend>
        <div class="clearfix">
            <strong style="font-size: 18px; font-weight: bold!important; line-height: none;">
                @Model.De
            </strong>
        </div>
        <div class="clearfix">
            <strong style="font-size: 11px; font-weight: bold!important; line-height: none;">Para: </strong>
            <strong style="font-size: 12px;">@Model.Para</strong>
            <strong style="font-size: 11px; line-height: none; float: right">
                @string.Format("{0:D}", @Model.Data)
            </strong>
        </div>
        <div class="clearfix">
            <strong style="font-size: 11px; font-weight: bold!important; line-height: none;">Cc: </strong><strong style="font-size: 12px;">@Model.Cc</strong>
        </div>
    </fieldset>  
    <br />   
    if (Model != null)
    {
    @Html.Raw(Model.Body.Replace("underline", "blink"));
    }
    
}